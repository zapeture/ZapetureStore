{
  "name": "zapeturestore",
  "version": "1.0.0",
  "description": "E-Commerce",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1 ",
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix client",
